# add a note
./notekeeper.py add "Shopping" "Milk, eggs, bread"

# list notes
./notekeeper.py list

# view a note
./notekeeper.py view "Shopping"

# delete a note
./notekeeper.py delete "Shopping"

---

### `notekeeper.py` (main script)
```python
#!/usr/bin/env python3
"""
notekeeper-cli — simple CLI notes stored in JSON

Usage:
  notekeeper.py add "title" "body"
  notekeeper.py list
  notekeeper.py view "title"
  notekeeper.py delete "title"
"""

import sys
import json
from pathlib import Path
from datetime import datetime

APP_DIR = Path.home() / ".notekeeper"
DATA_FILE = APP_DIR / "notes.json"

def ensure_storage():
    APP_DIR.mkdir(parents=True, exist_ok=True)
    if not DATA_FILE.exists():
        DATA_FILE.write_text(json.dumps({}))

def load_notes():
    ensure_storage()
    try:
        with DATA_FILE.open("r", encoding="utf-8") as f:
            return json.load(f)
    except Exception:
        return {}

def save_notes(notes):
    with DATA_FILE.open("w", encoding="utf-8") as f:
        json.dump(notes, f, ensure_ascii=False, indent=2)

def cmd_add(title, body):
    notes = load_notes()
    key = title.strip()
    if not key:
        print("Title cannot be empty.")
        return
    notes[key] = {
        "body": body,
        "created_at": datetime.utcnow().isoformat() + "Z"
    }
    save_notes(notes)
    print(f'Note "{key}" saved.')

def cmd_list():
    notes = load_notes()
    if not notes:
        print("No notes yet. Use `add` to create one.")
        return
    for i, (title, meta) in enumerate(sorted(notes.items()), start=1):
        created = meta.get("created_at", "")
        print(f"{i}. {title}  ({created})")

def cmd_view(title):
    notes = load_notes()
    key = title.strip()
    note = notes.get(key)
    if not note:
        print(f'No note found with title: "{key}"')
        return
    print(f"Title: {key}\nCreated: {note.get('created_at','')}\n\n{note.get('body','')}")

def cmd_delete(title):
    notes = load_notes()
    key = title.strip()
    if key in notes:
        del notes[key]
        save_notes(notes)
        print(f'Note "{key}" deleted.')
    else:
        print(f'No note found with title: "{key}"')

def print_usage():
    print(__doc__)

def main(argv):
    if len(argv) < 2:
        print_usage()
        return
    cmd = argv[1].lower()
    if cmd == "add" and len(argv) >= 4:
        cmd_add(argv[2], " ".join(argv[3:]))
    elif cmd == "list":
        cmd_list()
    elif cmd == "view" and len(argv) >= 3:
        cmd_view(" ".join(argv[2:]))
    elif cmd == "delete" and len(argv) >= 3:
        cmd_delete(" ".join(argv[2:]))
    else:
        print_usage()

if __name__ == "__main__":
    main(sys.argv)
chmod +x notekeeper.py
